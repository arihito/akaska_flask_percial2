{% extends "layout/mode.j2" %}

{% block container %}
    <nav class="navbar bg-body-secondary sticky-top flex-md-nowrap p-2 shadow">
        <a class="navbar-brand col-md-3 col-lg-2 mr-0 px-3 fade-in fade-in-delay-4" href="#">記事管理</a>
        <ul class="navbar-nav px-3">
            <li class="nav-item text-nowrap d-flex justify-content-end align-items-center">
                <div class="d-flex justify-content-between align-items-center" href="{{ url_for('memo.index') }}"><img src="{{ url_for('static', filename='images/user/' ~ current_user.thumbnail) }}" alt="{{ current_user.username }}" class="user-icon me-2 fade-in fade-in-delay-8 rounded-circle" width="" height=""><div class="user-name fade-in fade-in-delay-16"><strong>{{ current_user.username }}</strong> さん</div></div>
                <a class="btn btn-outline-secondary fade-in fade-in-delay-20 ms-3" href="{{ url_for('auth.logout') }}"><i class="fa fa-sign-out"></i> ログアウト</a>
            </li>
        </ul>
    </nav>
    <div class="container-fluid">
        <div class="row">
            {% include 'layout/sidemenu.j2' %}
            <main class="col-md-9 ml-sm-auto col-lg-10 px-md-4">
                {% block title %}
                {% endblock title %}
                {% for message in get_flashed_messages() %}
                <div class="alert alert-dark text-center"><i class="fa fa-exclamation-triangle"></i> {{ message }}</div>
                {% endfor %}
                {% block content %}
                {% endblock content %}
            </main>
        </div>
    </div>
{% endblock container %}
