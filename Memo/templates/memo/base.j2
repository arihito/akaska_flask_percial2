{% extends "layout/mode.j2" %}

{% block container %}
    <nav class="navbar bg-body-secondary sticky-top flex-md-nowrap p-2 shadow">
        <a class="navbar-brand col-md-3 col-lg-2 mr-0 px-3 fade-in fade-in-delay-4" href="#">記事管理</a>
        <ul class="navbar-nav px-3">
            <li class="nav-item text-nowrap">
                <span class="me-3 text-body-secondary fade-in fade-in-delay-12"><i class="fa fa-user-circle"></i> {{ current_user.username }}さん</span>
                <a class="btn btn-outline-secondary fade-in fade-in-delay-16" href="{{ url_for('auth.logout') }}"><i class="fa fa-sign-out"></i> ログアウト</a>
            </li>
        </ul>
    </nav>
    <div class="container-fluid">
        <div class="row">
            {% include 'layout/sidemenu.j2' %}
            <main class="col-md-9 ml-sm-auto col-lg-10 px-md-4">
                {% block title %}
                {% endblock title %}
                {% for message in get_flashed_messages() %}
                <div class="alert alert-dark text-center"><i class="fa fa-exclamation-triangle"></i> {{ message }}</div>
                {% endfor %}
                {% block content %}
                {% endblock content %}
            </main>
        </div>
    </div>
{% endblock container %}
