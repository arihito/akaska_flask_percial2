{% extends "memo/base.j2" %}
{% block title %}
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mt-4 mb-3 border-bottom">
        <h1>
            <i class="fa fa-list-alt"></i> {{ user.username }}さんの記事一覧
        </h1>
        <div class="d-flex align-items-center my-1">
            <form method="get"
                  action="{{ url_for('memo.index') }}"
                  class="input-group me-3">
                <span class="input-group-text">検索</span>
                <div class="form-floating">
                    <input type="text"
                           name="q"
                           placeholder="タイトル・本文を検索"
                           value="{{ q }}"
                           class="form-control"
                           id="floatingInputGroup1">
                    <label for="floatingInputGroup1">検索ワード</label>
                </div>
                <button class="btn btn-outline-secondary" type="submit">探す</button>
            </form>
            <div class="btn-toolbar mb-2 mb-md-0">
                <div class="btn-group mr-2 gap-2">
                    {% set current_order = request.args.get('order', 'desc') %}
                    {% if current_order == 'desc' %}
                        <a class="btn btn-outline-secondary btn-sm"
                           href="{{ url_for('memo.index', order='asc') }}">
                            <i class="fa fa-arrow-up"></i> 投稿日の古い順
                        </a>
                    {% else %}
                        <a class="btn btn-outline-secondary btn-sm"
                           href="{{ url_for('memo.index', order='desc') }}">
                            <i class="fa fa-arrow-down"></i> 投稿日の新しい順
                        </a>
                    {% endif %}
                    {% set current_likes = request.args.get('likes', 'desc') %}
                    {% if current_likes == 'desc' %}
                        <a class="btn btn-outline-secondary btn-sm"
                           href="{{ url_for('memo.index', likes='asc') }}">
                            <i class="fa fa-sort-amount-asc"></i> いいね多い順
                        </a>
                    {% else %}
                        <a class="btn btn-outline-secondary btn-sm"
                           href="{{ url_for('memo.index', likes='desc') }}">
                            <i class="fa fa-sort-amount-desc"></i> いいね少ない順
                        </a>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock title %}
{% block content %}
    {% if memos == [] %}
        <p>メモは登録されていません</p>
    {% else %}
        <div class="table-responsive">
            <table class="table  table-dark table-striped table-hover table-sm admin-table">
                <thead>
                    <tr>
                        <th>番号</th>
                        <th>見出し</th>
                        <th>本文</th>
                        <th>いいね</th>
                        <th>画像</th>
                        <th>日時</th>
                        <th>編集</th>
                        <th>削除</th>
                    </tr>
                </thead>
                <tbody>
                    {% for row in memos %}
                        {% set memo = row.memo %}
                        {% set like_count = row.like_count %}
                        <tr>
                            <td>{{ memo.id }}</td>
                            <td style="text-align:left">
                                <a href="{{ url_for('public.detail', memo_id=row.memo.id) }}" class="text-decoration-none text-white-50">
                                    <h6 class="font-bold" style="font-size:1.4rem">{{ memo.marked_title | safe }}</h6>
                                </a>
                            </td>
                            <td class="w-25" style="text-align:left">{{ memo.marked_content | safe }}</td>
                            <td>
                                <small><i class="fa fa-heart" style="color:pink"></i> {{ like_count }} いいね</small>
                            </td>
                            <td>
                                {% if memo.image_filename %}
                                    <img src="{{ url_for('static', filename='images/memo/' ~ memo.image_filename) }}"
                                        class="img-fluid rounded mb-3"
                                        width="100"
                                        height=""
                                        alt="記事画像">
                                {% endif %}
                            </td>
                            <td class="align-middle">
                                <i class="fa fa-calendar-o"></i>
                                {{ memo.created_at.strftime("%Y年%m月%d日") }}
                                <br>
                                {{ memo.created_at.strftime("%H時%M分%S秒") }}
                                ({{ memo.weekday_ja }})
                            </td>
                            <td>
                                <a class="btn btn-outline-secondary"
                                    href="{{ url_for('memo.update', memo_id=memo.id) }}"><i class="fa fa-pencil"></i>編集</a>
                            </td>
                            <td>
                                <a class="btn btn-outline-secondary"
                                    href="{{ url_for('memo.delete', memo_id=memo.id) }}"><i class="fa fa-trash-o"></i>削除</a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% endif %}
{% endblock content %}
