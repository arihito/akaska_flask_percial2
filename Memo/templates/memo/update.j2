{% extends "memo/base.j2" %}
{% block page_title %}記事編集 | {{ SITE_NAME }}{% endblock %}
{% block content %}
    {% from 'memo/_formhelpers.j2' import render_field %}
    <div class="d-flex align-items-center py-md-4 m-md-5 mb-5">
        <div class="col-12 col-md-6 form-signin p-md-5 mx-md-auto">
            <h1 class="fade-in fade-delay-1 my-4"><i class="fa fa-pencil"></i> メモを編集</h1>
            <form action="{{ url_for('memo.update', memo_id=memo.id) }}"
                method="post"
                enctype="multipart/form-data"
                novalidate>
                {{ form.hidden_tag() }}
                {{ render_field(form.title, wrapper_class="fade-in fade-delay-3") }}
                <div class="form-check my-3 text-start ps-0 fade-in fade-delay-4">
                    <div class="pretty p-switch p-fill">
                        <input type="checkbox" id="summaryCheck" {% if memo.summary %}checked{% endif %}>
                        <div class="state">
                            <label for="summaryCheck" class="form-check-label">要約文を入力する (任意)</label>
                        </div>
                    </div>
                </div>
                <div id="summary-area" class="summary-area mb-3">
                    {{ form.summary(class="form-control form-control-sm", rows="2", placeholder="一覧・カードに表示される短い説明文（最大300文字）") }}
                    {% if form.summary.errors %}
                        <div class="alert alert-danger small mt-1">
                            {% for error in form.summary.errors %}{{ error }}{% endfor %}
                        </div>
                    {% endif %}
                    <div class="form-text text-body-tertiary">未入力の場合は本文の冒頭が自動表示されます</div>
                </div>
                <link rel="stylesheet" href="https://unpkg.com/easymde/dist/easymde.min.css">
                <script src="https://unpkg.com/easymde/dist/easymde.min.js"></script>
                <div class="mb-3 fade-in fade-delay-6">
                    {{ form.content(id="content", class="form-control") }}
                    {% if form.content.errors %}
                        <div class="alert alert-danger small mt-1">
                            <i class="fa fa-exclamation-triangle"></i>
                            {% for error in form.content.errors %}{{ error }}{% endfor %}
                        </div>
                    {% endif %}
                </div>

                {% set selected_category_ids = memo.categories | map(attribute="id") | list %}
                {% include "memo/_categories.j2" with context %}
                <div class="d-flex justify-content-between">
                    {{ render_field(form.image, wrapper_class="fade-in fade-delay-9") }}
                    {% if memo.image_filename %}
                        <img src="{{ url_for('static', filename='images/memo/' ~ memo.image_filename) }}" class="image-fluid rounded change-mode" width="" height="58" alt="記事画像">
                    {% endif %}
                </div>
                <div class="d-flex g-3 mt-4">
                    {{ form.submit(class="btn btn-secondary py-3 fade-in fade-delay-12 w-100") }}
                    <a class="btn btn-outline-secondary py-3 fade-in fade-delay-15 ms-3" style="width:40%" href="{{ url_for('memo.index') }}"><i class="fa fa-reply"></i>一覧ページへ戻る</a>
                </div>
            </form>
        </div>
    </div>
{% endblock content %}
