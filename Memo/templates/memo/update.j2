{% extends "memo/base.j2" %}
{% block content %}
    {% from 'memo/_formhelpers.j2' import render_field %}
    <div class="d-flex align-items-center py-4 m-5">
        <div class="form-signin p-5 w-50 m-auto">
            <h1><i class="fa fa-pencil"></i> メモを編集</h1>
            <form action="{{ url_for('memo.update', memo_id=memo.id) }}"
                method="post"
                enctype="multipart/form-data"
                novalidate>
                {{ form.hidden_tag() }}
                {{ render_field(form.title) }}
                <link rel="stylesheet" href="https://unpkg.com/easymde/dist/easymde.min.css">
                <script src="https://unpkg.com/easymde/dist/easymde.min.js"></script>
                {{ render_field(form.content) }}
                <script>
                const easyMDE = new EasyMDE({
                    element: document.getElementById("content"),
                    spellChecker: false,
                    autofocus: true,
                    placeholder: "Markdownで本文を入力してください"
                });
                </script>
                <div class="d-flex justify-content-between">
                    {{ render_field(form.image) }}
                    {% if memo.image_filename %}
                        <img src="{{ url_for('static', filename='images/memo/' ~ memo.image_filename) }}"
                        class="image-fluid rounded"
                        width=""
                        height="58"
                        alt="記事画像">
                    {% endif %}
                </div>
                <div class="row p-3">
                    {{ form.submit(class="col-9 btn btn-secondary") }}
                    <a class="col-3 btn btn-outline-secondary" href="{{ url_for('memo.index') }}">一覧ページへ戻る</a>
                </div>
            </form>
        </div>
    </div>
{% endblock content %}
