{% extends "base.j2" %}
{% block page_title %}管理者プラン決済 | {{ SITE_NAME }}{% endblock %}
{% block content %}
    {# ---- 背景層（z-index:-1 でナビ・フッターより後ろ） ---- #}
    <div class="payment-bg"></div>

    {# ---- カード画像URLをJSへ渡す ---- #}
    <script>
        window.PAYMENT_CARD_IMAGES = [
            "{{ url_for('static', filename='images/cards/01.png') }}",
            "{{ url_for('static', filename='images/cards/02.png') }}",
            "{{ url_for('static', filename='images/cards/03.png') }}",
            "{{ url_for('static', filename='images/cards/04.png') }}",
            "{{ url_for('static', filename='images/cards/05.png') }}",
            "{{ url_for('static', filename='images/cards/06.png') }}"
        ];
    </script>

    {# ---- メインコンテナ（position:relative でカードビューアの基準点） ---- #}
    <div class="row g-0 align-items-stretch position-relative" style="min-height: 70vh; overflow: hidden;">

        {# カードギミック：全幅背景（position:absolute で row全体を覆う） #}
        <div id="paymentCardViewer" class="payment-card-viewer d-none d-md-block">
            <canvas id="paymentParticleCanvas"></canvas>
            <canvas id="paymentScannerCanvas"></canvas>
            <div class="payment-bg-card-stream" id="paymentCardStream">
                <div class="payment-bg-card-line" id="paymentCardLine"></div>
            </div>
        </div>

        {# 左カラム：決済カード（z-index:10 で前面） #}
        <div class="col-12 col-md-6 d-flex align-items-center justify-content-center p-4 p-md-5 position-relative" style="z-index: 10;">
            <div class="form-signin w-100" style="max-width: 400px;">
                <h1 class="h3 mb-3 fw-normal fade-in fade-delay-1"><i class="fa fa-credit-card me-2"></i>管理者プラン決済</h1>
                {% with messages = get_flashed_messages(with_categories=true) %}
                    {% if messages %}
                        {% for alert_type, message in messages %}
                        {% set icon = 'exclamation-triangle' if alert_type == 'danger' else 'check' %}
                            <div class="alert alert-{{ alert_type }} text-center"><i class="fa fa-{{ icon }} me-2"></i>{{ message }}</div>
                        {% endfor %}
                    {% endif %}
                {% endwith %}
                <div class="card fade-in fade-delay-2">
                    <div class="card-body">
                        <h5 class="card-title"><i class="fa fa-shield me-2"></i>管理者アクセスプラン</h5>
                        <p class="card-text text-body-secondary">管理者権限で全機能にアクセスできます。</p>
                        {# 解説リスト：下部フェードアウト #}
                        <ul class="list-unstyled mb-3 payment-feature-list">
                            <li class="mb-2"><i class="fa fa-check text-success me-2"></i>投稿記事評価グラフ閲覧</li>
                            <li class="mb-2"><i class="fa fa-check text-success me-2"></i>固定ページ管理</li>
                            <li class="mb-2"><i class="fa fa-check text-success me-2"></i>カテゴリー管理</li>
                            <li class="mb-2"><i class="fa fa-check text-success me-2"></i>ユーザーサムネイル管理</li>
                            <li class="mb-2"><i class="fa fa-check text-success me-2"></i>ユーザー利用管理</li>
                        </ul>
                        <hr>
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <span class="fs-4 fw-bold">&#165;5,000</span>
                            <span class="badge bg-secondary fs-6">10日間</span>
                        </div>
                        <form action="{{ url_for('admin.create_checkout_session') }}" method="post">
                            {{ form.hidden_tag() }}
                            <button type="submit" class="btn btn-secondary btn-lg w-100"><i class="fa fa-credit-card me-2"></i>Stripe決済へ進む</button>
                        </form>
                    </div>
                </div>
                <div class="my-4 fade-in fade-delay-4">
                    <a class="btn btn-outline-secondary btn-lg w-100" href="{{ url_for('admin.login') }}"><i class="fa fa-arrow-left me-1"></i>管理者ログインに戻る</a>
                </div>
            </div>
        </div>

        {# 右カラム：空（カードスライダーが透けて見える） #}
        <div class="col-12 col-md-6 position-relative" style="z-index: 1; min-height: 400px;"></div>

    </div>{# /row #}

    {# ---- payment_card.js 読み込み ---- #}
    <script src="{{ url_for('static', filename='js/payment_card.js') }}"></script>
{% endblock content %}
