{% extends "admin/base.j2" %}
{% block page_title %}テスト網羅率 | {{ SITE_NAME }}{% endblock %}

{% macro pct_bar(pct) %}
<div class="d-flex align-items-center gap-2">
    <div class="progress flex-grow-1" style="height:14px;">
        <div class="progress-bar {% if pct >= 70 %}bg-secondary{% elif pct >= 40 %}bg-secondary opacity-75{% else %}bg-secondary opacity-50{% endif %}"
             style="width:{{ pct }}%;"></div>
    </div>
    <span style="width:42px;text-align:right;">{{ pct }}%</span>
</div>
{% endmacro %}

{% block content %}
<div class="py-4">

    {# ===== ヘッダー ===== #}
    <div class="d-flex align-items-center justify-content-between mb-4 fade-in fade-delay-2">
        <h2 class="mb-0"><i class="fa fa-check-square-o me-2"></i>テスト網羅率状況</h2>
        <button id="coverageRunBtn" class="btn btn-outline-secondary btn-lg">
            <i class="fa fa-play me-1"></i>テスト実行
        </button>
    </div>

    {# ===== ローディング ===== #}
    <div id="coverageLoading" class="text-center py-5 d-none">
        <div class="spinner-border text-secondary" role="status" style="width:3rem;height:3rem;"></div>
        <p class="mt-3 text-body-secondary">pytest を実行中です。しばらくお待ちください…</p>
    </div>

    {# ===== 未実行メッセージ ===== #}
    <div id="coverageEmpty" class="{% if coverage %}d-none{% endif %}">
        <div class="card border-secondary">
            <div class="card-body text-center py-5">
                <i class="fa fa-inbox fa-3x text-body-secondary mb-3"></i>
                <p class="text-body-secondary mb-0">まだテストが実行されていません。<br>「テスト実行」ボタンを押して最新データを取得してください。</p>
            </div>
        </div>
    </div>

    {# ===== 結果パネル ===== #}
    <div id="coverageResult" class="{% if not coverage %}d-none{% endif %}">

        {# 合計カバレッジ + 最終実行日時 #}
        <div class="row mb-4">
            <div class="col-md-3 mb-3 mb-md-0 fade-in fade-delay-4">
                <div class="card border-secondary text-center py-3 h-100">
                    <div class="card-body">
                        <div id="totalPct" class="display-3 fw-bold text-body-secondary" style="color:#234;">
                            {{ coverage.total_pct if coverage else 0 }}%
                        </div>
                        <p class="text-body-secondary mb-1 mt-3 border-top pt-3">総カバレッジ</p>
                        <small id="covStmts" class="text-body-secondary">
                            <span class="fs-5">{{ coverage.total_covered if coverage else 0 }}</span> /
                            {{ coverage.total_stmts if coverage else 0 }} ステートメント
                        </small>
                    </div>
                </div>
            </div>
            <div class="col-md-9 fade-in fade-delay-6">

                {# プログレスバー #}
                <div class="mb-3">
                    <div class="d-flex justify-content-between mb-1">
                        <small class="text-body-secondary">カバレッジ進捗</small>
                        <small id="lastRun" class="text-body-secondary">
                            最終実行: {{ coverage.last_run if coverage else '' }}
                        </small>
                    </div>
                    <div class="progress" style="height:20px;">
                        <div id="totalBar" class="progress-bar bg-secondary"
                             style="width:{{ coverage.total_pct if coverage else 0 }}%;">
                        </div>
                    </div>
                    <div class="d-flex justify-content-between mt-2">
                        <small class="text-body-secondary">0%</small>
                        <small class="text-body-secondary">目標: 50%</small>
                        <small class="text-body-secondary">100%</small>
                    </div>
                </div>

                {# 総合評価 + 改善ポイント #}
                <div class="row g-3">
                    <div class="col-sm-6">
                        <div class="card border-secondary h-100">
                            <div class="card-body py-3 px-3">
                                <p class="fw-bold mb-2" style="font-size:0.8rem;letter-spacing:.05em;text-transform:uppercase;opacity:.6;">
                                    <i class="fa fa-star-o me-1"></i>総合評価
                                </p>
                                <div id="coverageSummary" class="d-flex align-items-center mt-3">{% if coverage %}
                                    {% set pct = coverage.total_pct %}
                                    {% if pct >= 70 %}
                                    <p class="fw-bold pt-2 me-2 badge rounded-pill text-bg-secondary" style="font-size:1.25rem;">優良</p>
                                    <p class="text-body-secondary mb-0" style="font-size:1.2rem;">カバレッジが目標(50%)を大幅に超えています。高い品質を維持できています。</p>
                                    {% elif pct >= 50 %}
                                    <p class="fw-bold pt-2 me-2 badge rounded-pill text-bg-secondary" style="font-size:1.25rem;">目標達成</p>
                                    <p class="text-body-secondary mb-0" style="font-size:1.2rem;">カバレッジが目標(50%)を達成しています。引き続きテストを充実させましょう。</p>
                                    {% elif pct >= 40 %}
                                    <p class="fw-bold pt-2 me-2 badge rounded-pill text-bg-secondary" style="font-size:1.25rem;">普通</p>
                                    <p class="text-body-secondary mb-0" style="font-size:1.2rem;">目標の50%まであと一歩です。重要なモジュールから優先的にテストを追加しましょう。</p>
                                    {% else %}
                                    <p class="fw-bold pt-2 me-2 badge rounded-pill text-bg-secondary" style="font-size:1.25rem;">要改善</p>
                                    <p class="text-body-secondary mb-0" style="font-size:1.2rem;">カバレッジが目標(50%)を下回っています。未テストのファイルへの対応を優先してください。</p>
                                    {% endif %}
                                {% else %}
                                    <p class="text-body-secondary mb-0" style="font-size:1.2rem;">テスト実行後に評価が表示されます。</p>
                                {% endif %}</div>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="card border-secondary h-100">
                            <div class="card-body py-3 px-3">
                                <p class="fw-bold mb-2" style="font-size:0.8rem;letter-spacing:.05em;text-transform:uppercase;opacity:.6;">
                                    <i class="fa fa-lightbulb-o me-1"></i>改善ポイント
                                </p>
                                <div id="coverageImprovement">{% if coverage %}
                                    {% set zero_files = coverage.files | selectattr('pct', 'equalto', 0) | list %}
                                    {% set miss_files = coverage.files | sort(attribute='missing', reverse=True) | selectattr('missing', 'gt', 0) | list %}
                                    {% if zero_files %}
                                    <p class="fw-semibold mb-1" style="font-size:1.2rem;"><i class="fa fa-circle-o me-1"></i>未テストファイル（{{ zero_files | length }}件）</p>
                                    <ul class="list-unstyled mb-2 ps-2">
                                        {% for f in zero_files[:3] %}
                                        <li class="font-monospace text-body-secondary" style="font-size:0.78rem;">{{ f.name }}</li>
                                        {% endfor %}
                                        {% if zero_files | length > 3 %}
                                        <li class="text-body-secondary" style="font-size:0.78rem;">… 他 {{ zero_files | length - 3 }} 件</li>
                                        {% endif %}
                                    </ul>
                                    {% endif %}
                                    {% if miss_files %}
                                    <p class="fw-semibold mb-1" style="font-size:1.2rem;"><i class="fa fa-exclamation-circle me-1"></i>未カバー行が多いファイル（上位3件）</p>
                                    <ul class="list-unstyled mb-0 ps-2">
                                        {% for f in miss_files[:3] %}
                                        <li class="font-monospace text-body-secondary" style="font-size:0.78rem;">
                                            {{ f.name }}<span class="ms-1 fw-bold">{{ f.missing }}</span><span class="ms-1 opacity-75" style="font-size:0.7rem;">行未カバー</span>
                                        </li>
                                        {% endfor %}
                                    </ul>
                                    {% endif %}
                                    {% if not zero_files and not miss_files %}
                                    <p class="text-body-secondary mb-0" style="font-size:1.2rem;"><i class="fa fa-check me-1"></i>すべてのファイルがカバーされています。</p>
                                    {% endif %}
                                {% else %}
                                    <p class="text-body-secondary mb-0" style="font-size:1.2rem;">テスト実行後に改善ポイントが表示されます。</p>
                                {% endif %}</div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>

        {# ===== タブナビ ===== #}
        <ul class="nav nav-tabs nav-fill mb-0" id="coverageTabs" role="tablist">
            <li class="nav-item fade-in fade-delay-8" role="presentation">
                <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#tab-files" type="button" role="tab">
                    <i class="fa fa-file-code-o me-1"></i>ファイル
                    <span class="badge bg-secondary ms-1" id="filesBadge">{{ coverage.files|length if coverage else 0 }}</span>
                </button>
            </li>
            <li class="nav-item fade-in fade-delay-10" role="presentation">
                <button class="nav-link" data-bs-toggle="tab" data-bs-target="#tab-functions" type="button" role="tab">
                    <i class="fa fa-code me-1"></i>関数
                    <span class="badge bg-secondary ms-1" id="funcBadge">{{ coverage.functions|length if coverage else 0 }}</span>
                </button>
            </li>
            <li class="nav-item fade-in fade-delay-12" role="presentation">
                <button class="nav-link" data-bs-toggle="tab" data-bs-target="#tab-classes" type="button" role="tab">
                    <i class="fa fa-cube me-1"></i>クラス
                    <span class="badge bg-secondary ms-1" id="classBadge">{{ coverage.classes|length if coverage else 0 }}</span>
                </button>
            </li>
        </ul>

        <div class="tab-content fade-in fade-delay-16">

            {# ----- ファイルタブ ----- #}
            <div class="tab-pane fade show active" id="tab-files" role="tabpanel">
                <div class="card border-secondary border-top-0 rounded-top-0">
                    <div class="cov-grid-files" id="coverageTableBody">
                        <div class="cov-row cov-hdr">
                            <span class="cov-col-name">ファイル</span>
                            <span class="cov-col-stmts">Stmts</span>
                            <span class="cov-col-miss">Miss</span>
                            <span class="cov-col-bar">カバレッジ</span>
                        </div>
                        {% if coverage %}{% for f in coverage.files %}
                        <div class="cov-row">
                            <span class="cov-col-name font-monospace">{{ f.name }}</span>
                            <span class="cov-col-stmts">{{ f.stmts }}</span>
                            <span class="cov-col-miss text-body-secondary">{{ f.missing }}</span>
                            <span class="cov-col-bar">{{ pct_bar(f.pct) }}</span>
                        </div>
                        {% endfor %}{% endif %}
                    </div>
                </div>
            </div>

            {# ----- 関数タブ ----- #}
            <div class="tab-pane fade" id="tab-functions" role="tabpanel">
                <div class="card border-secondary border-top-0 rounded-top-0">
                    <div class="cov-grid-items" id="coverageFuncTableBody">
                        <div class="cov-row cov-hdr">
                            <span class="cov-col-name">関数 / メソッド</span>
                            <span class="cov-col-file">ファイル</span>
                            <span class="cov-col-stmts">Stmts</span>
                            <span class="cov-col-miss">Miss</span>
                            <span class="cov-col-bar">カバレッジ</span>
                        </div>
                        {% if coverage %}{% for f in coverage.functions %}
                        <div class="cov-row">
                            <span class="cov-col-name font-monospace fw-semibold">{{ f.name }}</span>
                            <span class="cov-col-file text-body-secondary font-monospace">{{ f.file }}:{{ f.line }}</span>
                            <span class="cov-col-stmts">{{ f.stmts }}</span>
                            <span class="cov-col-miss text-body-secondary">{{ f.missing }}</span>
                            <span class="cov-col-bar">{{ pct_bar(f.pct) }}</span>
                        </div>
                        {% endfor %}{% endif %}
                    </div>
                </div>
            </div>

            {# ----- クラスタブ ----- #}
            <div class="tab-pane fade" id="tab-classes" role="tabpanel">
                <div class="card border-secondary border-top-0 rounded-top-0">
                    <div class="cov-grid-items" id="coverageClassTableBody">
                        <div class="cov-row cov-hdr">
                            <span class="cov-col-name">クラス</span>
                            <span class="cov-col-file">ファイル</span>
                            <span class="cov-col-stmts">Stmts</span>
                            <span class="cov-col-miss">Miss</span>
                            <span class="cov-col-bar">カバレッジ</span>
                        </div>
                        {% if coverage %}{% for c in coverage.classes %}
                        <div class="cov-row">
                            <span class="cov-col-name font-monospace fw-semibold">{{ c.name }}</span>
                            <span class="cov-col-file text-body-secondary font-monospace">{{ c.file }}:{{ c.line }}</span>
                            <span class="cov-col-stmts">{{ c.stmts }}</span>
                            <span class="cov-col-miss text-body-secondary">{{ c.missing }}</span>
                            <span class="cov-col-bar">{{ pct_bar(c.pct) }}</span>
                        </div>
                        {% endfor %}{% endif %}
                    </div>
                </div>
            </div>

        </div>{# /tab-content #}

    </div>{# /coverageResult #}

</div>
{% endblock %}
