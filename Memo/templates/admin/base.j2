{% extends "layout/mode.j2" %}
{% block page_title %}{% endblock %}

{% block container %}
    <nav class="navbar admin-navbar sticky-top p-2 shadow">
        <div class="container-fluid d-flex justify-content-between align-items-center">
            <!-- 左：タイトル -->
            <a class="navbar-brand px-md-3 fade-in fade-in-delay-4" href="{{ url_for('admin.index') }}"><i class="fa fa-shield me-2"></i>管理者専用</a>
            <!-- 右：ユーザー情報＋ログアウト -->
            <div class="d-flex align-items-center">
                <div class="border rounded px-2 me-3 admin-points">
                    {% if admin_points is none %}
                        {# スーパーアドミン：無制限表示 #}
                        <i class="fa fa-battery-4 super-admin-icon"></i><span class="super-admin-icon ms-1">無限</span>
                        <small class="opacity-50">pt<span class="px-2">|</span></small>
                        <i class="fa fa-clock-o super-admin-icon"></i><span class="super-admin-icon ms-1">永遠</span>
                        <small class="opacity-50">h</small>
                    {% else %}
                        {% if admin_points >= 19 %}{% set bat = '4' %}{% elif admin_points >= 13 %}{% set bat = '3' %}{% elif admin_points >= 7 %}{% set bat = '2' %}{% elif admin_points >= 1 %}{% set bat = '1' %}{% else %}{% set bat = '0' %}{% endif %}
                        <i class="fa fa-battery-{{ bat }}"{% if bat == '0' %} style="color:#900"{% endif %}></i>
                        <strong class="me-1 {% if is_points_low %}text-danger{% endif %}" style="font-size:1.2rem">{{ admin_points }}</strong><small class="opacity-50">/24pt<span class="px-2">|</span></small>
                        <i class="fa fa-clock-o"></i>
                        <strong class="ms-1 {% if is_expiring_soon %}text-danger{% endif %}" style="font-size:1.2rem">{{ remaining_h }}</strong><small class="opacity-50">h{{ remaining_m }}m</small>
                    {% endif %}
                </div>
                <a class="d-flex align-items-center text-decoration-none me-3" href="{{ url_for('memo.index') }}">
                    <img src="{{ url_for('static', filename='images/user/' ~ current_user.thumbnail) }}" alt="{{ current_user.username }}" class="user-icon me-2 fade-in fade-in-delay-8 rounded-circle" width="" height="">
                    <span class="user-name fade-in fade-in-delay-16 text-body-secondary d-none d-md-inline"><strong>{{ current_user.username }}</strong> さん</span>
                </a>
                <a class="btn btn-outline-secondary me-2 fade-in fade-in-delay-20 d-none d-md-flex" href="{{ url_for('memo.index') }}"><i class="fa fa-arrow-left me-1"></i>マイページ</a>
                <a class="btn btn-outline-secondary fade-in fade-in-delay-20 d-none d-md-flex" href="{{ url_for('admin.logout') }}"><i class="fa fa-sign-out me-1"></i>管理者ログアウト</a>
            </div>
        </div>
    </nav>
    <div class="container-fluid">
        <div class="row">
            <nav id="sidebarMenu" class="sidebarMenu col-md-3 col-lg-2 d-none d-md-block sidebar collapse min-vh-100 shadow">
                {% include 'admin/sidemenu.j2' %}
            </nav>
            {# モーダルは overflow:clip+animation の影響を受けないようサイドバー外に配置 #}
            {% include 'admin/sidemenu_modals.j2' %}
            {# モバイル用オフキャンバスメニュー（d-md-none で PC では非表示） #}
            <div class="offcanvas offcanvas-start d-md-none" tabindex="-1" id="adminOffcanvas" aria-labelledby="adminOffcanvasLabel">
                <div class="offcanvas-header border-bottom">
                    <div class="d-flex align-items-center gap-2">
                        <img src="{{ url_for('static', filename='images/user/' ~ current_user.thumbnail) }}"
                             alt="{{ current_user.username }}"
                             class="rounded-circle user-icon" width="36" height="36">
                        <span id="adminOffcanvasLabel" class="fw-bold">{{ current_user.username }} さん</span>
                    </div>
                    <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="閉じる"></button>
                </div>
                <div class="offcanvas-body p-0">
                    {% include 'admin/sidemenu_nav.j2' %}
                </div>
            </div>
            <main class="adminMain col-md-9 ml-sm-auto col-lg-10 px-md-4">
                {% with messages = get_flashed_messages(with_categories=true) %}
                    {% if messages %}
                        {% for alert_type, message in messages %}
                        {% set icon = 'exclamation-triangle' if alert_type == 'danger' else 'check' %}
                            <div class="alert alert-{{ alert_type }} text-center mt-3"><i class="fa fa-{{ icon }} me-2"></i>{{ message }}</div>
                        {% endfor %}
                    {% endif %}
                {% endwith %}
                {% block content %}
                {% endblock content %}
            </main>
        </div>
    </div>
    {# モバイル用 固定メニューボタン（カラーモードボタンの上に配置、スマホ専用） #}
    <div class="position-fixed d-md-none admin-hamburger-btn">
        <button class="btn btn-bd-primary py-2 d-flex align-items-center"
                type="button"
                data-bs-toggle="offcanvas" data-bs-target="#adminOffcanvas"
                aria-controls="adminOffcanvas"
                aria-label="メニューを開く">
            <i class="fa fa-bars fa-lg my-1"></i>
        </button>
    </div>
{% endblock container %}
