{% extends "admin/base.j2" %}
{% block page_title %}管理者ダッシュボード | {{ SITE_NAME }}{% endblock %}
{% block content %}
    <div class="py-4">

        {# ===== アナリティクスチャートセクション ===== #}
        <h2 class="my-4 fade-in fade-delay-2">
            <i class="fa fa-bar-chart me-2"></i>アナリティクス
        </h2>

        <div class="row mb-5">
            {# 左カラム: 棒グラフ + 帯グラフ (col-8) - flex-column で縦積み #}
            {% set band_colors = ['rgba(96,118,133,0.5)', 'rgba(133,96,117,0.5)', 'rgba(117,133,96,0.5)', 'rgba(133,117,96,0.5)', 'rgba(96,117,133,0.5)', 'rgba(117,96,133,0.5)', 'rgba(133,103,96,0.5)'] %}
            <div class="col-md-8 d-flex flex-column gap-3">
                {# 棒グラフカード #}
                <div class="card border-secondary chart-card d-flex flex-column flex-grow-1">
                    <div class="card-header chart-card-header d-flex justify-content-between align-items-center">
                        <span><i class="fa fa-signal me-2"></i>記事品質スコア（最新5件）</span>
                        <button id="analyzeBtn" class="btn btn-outline-secondary btn-lg"
                            {% if admin_points is not none and admin_points < 6 %}disabled title="AIポイント不足（必要: 6pt / 残: {{ admin_points }}pt）"{% endif %}>
                            <i class="fa fa-cogs me-1"></i>AI解析
                            <small class="ms-1 opacity-75 badge rounded-pill text-bg-secondary" style="font-size:0.5em;font-weight:normal">有料機能</small>
                        </button>
                    </div>
                    <div class="card-body chart-card-body bar-chart-body">
                        <div class="bar-chart-wrapper">
                            <canvas id="barChart"></canvas>
                        </div>
                        <div id="analyzeLoading" class="text-center py-3 d-none">
                            <div class="spinner-border spinner-border-sm text-secondary" role="status"></div>
                            <span class="ms-2 text-body-secondary small">Gemini AIで解析中...</span>
                        </div>
                        <div id="analyzeError" class="text-center py-2 d-none">
                            <small class="text-body-secondary">
                                <i class="fa fa-exclamation-triangle me-1"></i>解析に失敗しました
                            </small>
                        </div>
                    </div>
                </div>
                {# 帯グラフカード: ユーザー属性分布 #}
                <div class="card border-secondary chart-card">
                    <div class="card-header chart-card-header">
                        <i class="fa fa-users me-2"></i>ユーザー属性分布
                    </div>
                    <div class="card-body chart-card-body d-flex flex-column justify-content-evenly py-3 px-3">
                        {% for row in attr_dist_data %}
                        <div class="attr-band-row d-flex align-items-center">
                            <div class="attr-band-label text-body-secondary small text-end pe-3">{{ row.key }}</div>
                            <div class="attr-band-track flex-grow-1">
                                {% for seg in row.segs %}
                                <div class="attr-band-fill"
                                     data-pct="{{ seg.pct }}"
                                     style="background-color: {{ band_colors[loop.index0 % 7] }}">
                                    {% if seg.pct > 7 %}
                                    <span class="attr-band-text">{{ seg.label }} {{ seg.pct }}%</span>
                                    {% endif %}
                                </div>
                                {% endfor %}
                            </div>
                        </div>
                        {% endfor %}
                    </div>
                </div>
            </div>

            {# 右カラム: 円グラフ x2 (col-4) #}
            <div class="col-md-4">
                {# 右上: カテゴリー分布 #}
                <div class="card border-secondary chart-card mb-3 fade-in fade-delay-6">
                    <div class="card-header chart-card-header">
                        <i class="fa fa-pie-chart me-2"></i>カテゴリー分布
                    </div>
                    <div class="card-body chart-card-body">
                        <canvas id="pieCategory" height="200"></canvas>
                    </div>
                </div>
                {# 右下: ユーザー投稿数 #}
                <div class="card border-secondary chart-card fade-in fade-delay-8">
                    <div class="card-header chart-card-header">
                        <i class="fa fa-pie-chart me-2"></i>投稿数 TOP5
                    </div>
                    <div class="card-body chart-card-body">
                        <canvas id="pieUser" height="200"></canvas>
                    </div>
                </div>
            </div>
        </div>

        {# ===== ユーザー一覧 ===== #}
        <h2 class="my-4 fade-in fade-delay-4">
            <i class="fa fa-users me-2"></i>ユーザー一覧
        </h2>
        {# PC用テーブル #}
        <div class="table-responsive">
            <table class="table table-striped table-hover table-sm d-none d-md-table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>ユーザー名</th>
                        <th>メール</th>
                        <th>登録日時</th>
                        <th>申請</th>
                        <th>承認</th>
                        <th>決済</th>
                        <th>操作</th>
                    </tr>
                </thead>
                <tbody>
                    {% for user in users %}
                    <tr class="fade-in fade-delay-{{ loop.index * 2 }}">
                        <td>{{ user.id }}</td>
                        <td class="font-bold fs-4">{{ user.username }}<span class="ms-1" style="font-size:1rem">様</span></td>
                        <td>{{ user.email }}</td>
                        <td class="align-middle" style="font-size:12px">
                            {% set weekdays = ['月', '火', '水', '木', '金', '土', '日'] %}
                            <i class="fa fa-calendar-o"></i>
                            {{ user.created_at.strftime("%Y年%m月%d日") }}({{ weekdays[user.created_at.weekday()] }})<br>
                            {{ user.created_at.strftime("%H時%M分%S秒") }}
                        </td>
                        <td>
                            {% if user.is_applied %}
                                {% set weekdays = ['月', '火', '水', '木', '金', '土', '日'] %}
                                {% if user.applied_at %}
                                    {% set wd = weekdays[user.applied_at.weekday()] %}
                                    {% set tip = "申請日時: " ~ user.applied_at.strftime("%Y年%m月%d日") ~ "(" ~ wd ~ ") " ~ user.applied_at.strftime("%H:%M") %}
                                {% else %}
                                    {% set tip = "申請日時: 不明" %}
                                {% endif %}
                                <span class="badge bg-secondary" data-bs-toggle="tooltip" data-bs-placement="top" title="{{ tip }}" style="cursor:default;
                                border:1px solid #777;border-radius:12px;">申請済</span>
                            {% else %}
                                <span class="text-body-secondary small">―</span>
                            {% endif %}
                        </td>
                        <td>
                            {% if user.is_admin %}
                                {% set weekdays = ['月', '火', '水', '木', '金', '土', '日'] %}
                                {% if user.approved_at %}
                                    {% set wd = weekdays[user.approved_at.weekday()] %}
                                    {% set tip = "承認日時: " ~ user.approved_at.strftime("%Y年%m月%d日") ~ "(" ~ wd ~ ") " ~ user.approved_at.strftime("%H:%M") %}
                                {% else %}
                                    {% set tip = "承認日時: 不明" %}
                                {% endif %}
                                <span class="badge bg-secondary" data-bs-toggle="tooltip" data-bs-placement="top" title="{{ tip }}" style="cursor:default;
                                border:1px solid #777;border-radius:12px;">承認済</span>
                            {% else %}
                                <span class="text-body-secondary small">―</span>
                            {% endif %}
                        </td>
                        <td>
                            {% if user.is_paid %}
                                {% set weekdays = ['月', '火', '水', '木', '金', '土', '日'] %}
                                {% if user.paid_at %}
                                    {% set wd = weekdays[user.paid_at.weekday()] %}
                                    {% set tip_paid = "決済日時: " ~ user.paid_at.strftime("%Y年%m月%d日") ~ "(" ~ wd ~ ") " ~ user.paid_at.strftime("%H:%M") %}
                                {% else %}
                                    {% set tip_paid = "決済日時: 不明" %}
                                {% endif %}
                                {% if user.subscription_expires_at %}
                                    {% set wd2 = weekdays[user.subscription_expires_at.weekday()] %}
                                    {% set tip_paid = tip_paid ~ "<br>有効期限: " ~ user.subscription_expires_at.strftime("%Y年%m月%d日") ~ "(" ~ wd2 ~ ") " ~ user.subscription_expires_at.strftime("%H:%M") %}
                                {% endif %}
                                <span class="badge bg-secondary" data-bs-toggle="tooltip" data-bs-placement="top" title="{{ tip_paid }}" style="cursor:default;
                                border:1px solid #777;border-radius:12px;">決済済</span>
                            {% else %}
                                <span class="text-body-secondary small">―</span>
                            {% endif %}
                        </td>
                        <td class="text-nowrap">
                            {% if is_super_admin %}
                            <form action="{{ url_for('admin.approve', user_id=user.id) }}" method="post" class="d-inline">
                                {{ form.hidden_tag() }}
                                {% if user.is_admin %}
                                    <button type="submit" class="btn btn-outline-secondary btn-sm">承認取消</button>
                                {% else %}
                                    <button type="submit" class="btn btn-secondary btn-sm">承認する</button>
                                {% endif %}
                            </form>
                            {% endif %}
                            {% if user.email != super_admin_email %}
                            <span class="d-inline-block ms-1 position-relative">
                                {% if user.is_banned %}
                                    {# 停止中：誰でも解除可 #}
                                    <form action="{{ url_for('admin.ban', user_id=user.id) }}" method="post" class="d-inline">
                                        {{ form.hidden_tag() }}
                                        <button type="submit" class="btn btn-secondary btn-sm">停止解除</button>
                                    </form>
                                {% elif is_super_admin %}
                                    {% if user.suspend_requested %}
                                        {# スーパーadmin: 承認ボタン（理由ツールチップ付き） #}
                                        <form action="{{ url_for('admin.ban_approve', user_id=user.id) }}" method="post" class="d-inline">
                                            {{ form.hidden_tag() }}
                                            <button type="submit" class="btn btn-outline-secondary btn-sm"
                                                    data-bs-toggle="tooltip" data-bs-placement="top"
                                                    title="理由: {{ user.suspend_reason }}">
                                                一時停止希望
                                            </button>
                                        </form>
                                    {% else %}
                                        {# スーパーadmin: 即時停止 #}
                                        <form action="{{ url_for('admin.ban', user_id=user.id) }}" method="post" class="d-inline">
                                            {{ form.hidden_tag() }}
                                            <button type="submit" class="btn btn-outline-secondary btn-sm">一時停止</button>
                                        </form>
                                    {% endif %}
                                {% else %}
                                    {% if user.suspend_requested %}
                                        {# 通常admin: 希望済みバッジ #}
                                        <span class="badge bg-secondary" style="cursor:default;border:1px solid #777;border-radius:12px;">希望済</span>
                                    {% else %}
                                        {# 通常admin: 吹き出しフォーム #}
                                        <button type="button" class="btn btn-outline-secondary btn-sm js-suspend-btn"
                                                data-user-id="{{ user.id }}">
                                            一時停止希望
                                        </button>
                                        <div class="suspend-popover d-none" id="suspend-popover-{{ user.id }}">
                                            <div class="suspend-popover-arrow"></div>
                                            <form action="{{ url_for('admin.ban', user_id=user.id) }}" method="post">
                                                {{ form.hidden_tag() }}
                                                <p class="small mb-1 fw-bold text-body-secondary">停止理由</p>
                                                <textarea name="suspend_reason" class="form-control form-control-sm mb-2"
                                                    rows="3" maxlength="500" placeholder="理由を入力してください..." required></textarea>
                                                <div class="d-flex gap-1">
                                                    <button type="submit" class="btn btn-secondary btn-sm flex-fill">通知する</button>
                                                    <button type="button" class="btn btn-outline-secondary btn-sm js-suspend-cancel">×</button>
                                                </div>
                                            </form>
                                        </div>
                                    {% endif %}
                                {% endif %}
                            </span>
                            {% endif %}
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        {# スマホ用カードリスト #}
        <div class="d-md-none fade-in fade-in-delay-3">
            {% for user in users %}
            <div class="border rounded p-3 mb-3 shadow-sm">
                <div class="d-grid gap-2" style="grid-template-columns: repeat(16, 1fr);">
                    <!-- 1段目：ID + ユーザー名 -->
                    <div style="grid-column: 1 / 2;" class="d-flex align-items-center border-end pe-2 small text-body-secondary">{{ user.id }}</div>
                    <div style="grid-column: 2 / -1;" class="fw-bold fs-5">
                        {{ user.username }}<span class="ms-1 small fw-normal">様</span>
                    </div>
                    <!-- 2段目：メール -->
                    <div style="grid-column: 1 / -1;" class="small text-body-secondary mb-1">
                        <i class="fa fa-envelope-o me-1"></i>{{ user.email }}
                    </div>
                    <!-- 3段目：登録日時 -->
                    <div style="grid-column: 1 / -1;" class="small mb-2">
                        {% set weekdays = ['月', '火', '水', '木', '金', '土', '日'] %}
                        <i class="fa fa-calendar-o me-1"></i>
                        {{ user.created_at.strftime("%Y年%m月%d日") }}({{ weekdays[user.created_at.weekday()] }})
                        {{ user.created_at.strftime("%H:%M") }}
                    </div>
                    <!-- 4段目：バッジ群 -->
                    <div style="grid-column: 1 / -1;" class="d-flex flex-wrap gap-1 mb-3">
                        {% if user.is_applied %}
                            {% set weekdays = ['月', '火', '水', '木', '金', '土', '日'] %}
                            {% if user.applied_at %}
                                {% set wd = weekdays[user.applied_at.weekday()] %}
                                {% set tip = "申請日時: " ~ user.applied_at.strftime("%Y年%m月%d日") ~ "(" ~ wd ~ ") " ~ user.applied_at.strftime("%H:%M") %}
                            {% else %}
                                {% set tip = "申請日時: 不明" %}
                            {% endif %}
                            <span class="badge bg-secondary" data-bs-toggle="tooltip" data-bs-placement="top" title="{{ tip }}" style="cursor:default;
                            border:1px solid #777;border-radius:12px;">申請済</span>
                        {% else %}
                            <span class="badge bg-secondary bg-opacity-25 text-body-secondary">未申請</span>
                        {% endif %}
                        {% if user.is_admin %}
                            {% set weekdays = ['月', '火', '水', '木', '金', '土', '日'] %}
                            {% if user.approved_at %}
                                {% set wd = weekdays[user.approved_at.weekday()] %}
                                {% set tip = "承認日時: " ~ user.approved_at.strftime("%Y年%m月%d日") ~ "(" ~ wd ~ ") " ~ user.approved_at.strftime("%H:%M") %}
                            {% else %}
                                {% set tip = "承認日時: 不明" %}
                            {% endif %}
                            <span class="badge bg-secondary" data-bs-toggle="tooltip" data-bs-placement="top" title="{{ tip }}" style="cursor:default;
                            border:1px solid #777;border-radius:12px;">承認済</span>
                        {% else %}
                            <span class="badge bg-secondary bg-opacity-25 text-body-secondary">未承認</span>
                        {% endif %}
                        {% if user.is_paid %}
                            {% set weekdays = ['月', '火', '水', '木', '金', '土', '日'] %}
                            {% if user.paid_at %}
                                {% set wd = weekdays[user.paid_at.weekday()] %}
                                {% set tip_paid = "決済日時: " ~ user.paid_at.strftime("%Y年%m月%d日") ~ "(" ~ wd ~ ") " ~ user.paid_at.strftime("%H:%M") %}
                            {% else %}
                                {% set tip_paid = "決済日時: 不明" %}
                            {% endif %}
                            {% if user.subscription_expires_at %}
                                {% set wd2 = weekdays[user.subscription_expires_at.weekday()] %}
                                {% set tip_paid = tip_paid ~ " / 有効期限: " ~ user.subscription_expires_at.strftime("%Y年%m月%d日") ~ "(" ~ wd2 ~ ") " ~ user.subscription_expires_at.strftime("%H:%M") %}
                            {% endif %}
                            <span class="badge bg-secondary" data-bs-toggle="tooltip" data-bs-placement="top" title="{{ tip_paid }}" style="cursor:default;
                            border:1px solid #777;border-radius:12px;">決済済</span>
                        {% else %}
                            <span class="badge bg-secondary bg-opacity-25 text-body-secondary">未決済</span>
                        {% endif %}
                    </div>
                    <!-- 5段目：操作ボタン -->
                    <div style="grid-column: 1 / -1;" class="d-flex gap-2">
                        {% if is_super_admin %}
                        <form action="{{ url_for('admin.approve', user_id=user.id) }}" method="post" class="flex-fill">
                            {{ form.hidden_tag() }}
                            {% if user.is_admin %}
                                <button type="submit" class="btn btn-outline-secondary btn-sm w-100">承認取消</button>
                            {% else %}
                                <button type="submit" class="btn btn-secondary btn-sm w-100">承認する</button>
                            {% endif %}
                        </form>
                        {% endif %}
                        {% if user.email != super_admin_email %}
                        <div class="flex-fill position-relative">
                            {% if user.is_banned %}
                                <form action="{{ url_for('admin.ban', user_id=user.id) }}" method="post">
                                    {{ form.hidden_tag() }}
                                    <button type="submit" class="btn btn-secondary btn-sm w-100">停止解除</button>
                                </form>
                            {% elif is_super_admin %}
                                {% if user.suspend_requested %}
                                    <form action="{{ url_for('admin.ban_approve', user_id=user.id) }}" method="post">
                                        {{ form.hidden_tag() }}
                                        <button type="submit" class="btn btn-outline-secondary btn-sm w-100"
                                                data-bs-toggle="tooltip" data-bs-placement="top"
                                                title="理由: {{ user.suspend_reason }}">
                                            一時停止希望
                                        </button>
                                    </form>
                                {% else %}
                                    <form action="{{ url_for('admin.ban', user_id=user.id) }}" method="post">
                                        {{ form.hidden_tag() }}
                                        <button type="submit" class="btn btn-outline-secondary btn-sm w-100">一時停止</button>
                                    </form>
                                {% endif %}
                            {% else %}
                                {% if user.suspend_requested %}
                                    <span class="badge bg-secondary" style="cursor:default;border:1px solid #777;border-radius:12px;">希望済</span>
                                {% else %}
                                    <button type="button" class="btn btn-outline-secondary btn-sm w-100 js-suspend-btn"
                                            data-user-id="{{ user.id }}-sp">
                                        一時停止希望
                                    </button>
                                    <div class="suspend-popover d-none" id="suspend-popover-{{ user.id }}-sp">
                                        <div class="suspend-popover-arrow"></div>
                                        <form action="{{ url_for('admin.ban', user_id=user.id) }}" method="post">
                                            {{ form.hidden_tag() }}
                                            <p class="small mb-1 fw-bold text-body-secondary">停止理由</p>
                                            <textarea name="suspend_reason" class="form-control form-control-sm mb-2"
                                                rows="3" maxlength="500" placeholder="理由を入力してください..." required></textarea>
                                            <div class="d-flex gap-1">
                                                <button type="submit" class="btn btn-secondary btn-sm flex-fill">通知する</button>
                                                <button type="button" class="btn btn-outline-secondary btn-sm js-suspend-cancel">×</button>
                                            </div>
                                        </form>
                                    </div>
                                {% endif %}
                            {% endif %}
                        </div>
                        {% endif %}
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
        {% if is_paginate %}
            <nav aria-label="Page navigation" class="mt-3 mb-5 fade-in fade-in-delay-3">
                <ul class="pagination justify-content-center pagination-secondary">
                    <li class="page-item {% if page <= 1 %}disabled{% endif %}">
                        <a class="page-link" href="{{ url_for('admin.index', page=page - 1) }}">
                            <i class="fa fa-arrow-left"></i>
                        </a>
                    </li>
                    {% for pnum in range(1, pages + 1) %}
                        <li class="page-item {% if pnum == page %}active{% endif %}">
                            <a class="page-link" href="{{ url_for('admin.index', page=pnum) }}">{{ pnum }}</a>
                        </li>
                    {% endfor %}
                    <li class="page-item {% if page >= pages %}disabled{% endif %}">
                        <a class="page-link" href="{{ url_for('admin.index', page=page + 1) }}">
                            <i class="fa fa-arrow-right"></i>
                        </a>
                    </li>
                </ul>
            </nav>
        {% endif %}
    </div>

    {# チャートデータをJS用に埋め込み #}
    <script>
        window.__CHART_DATA__ = {
            bar: {{ bar_chart_data | safe }},
            pieCategory: {{ pie_category_data | safe }},
            pieUser: {{ pie_user_data | safe }},
        };
    </script>
{% endblock content %}
