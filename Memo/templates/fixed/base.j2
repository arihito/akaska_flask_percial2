{% extends "base.j2" %}
{% block content %}
    <link rel="stylesheet"
        href="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.9.0/styles/github-dark.min.css">
    <style>
    .article-img {
        height: 300px;
        background: url("{{ key_visual | default('/static/images/memo/nofile.jpg') }}") center / cover no-repeat;
    }
  </style>
  <div class="mb-4 rounded article-img"></div>
  <div class="row">
    <div class="col-md-9">
      <h1 class="display-4 my-3 pb-4 border-bottom">{{ page_title }}</h1>
      <div class="markdown-body">
        {% block article_body %}
        {% endblock article_body %}
      </div>
      <nav class="navbar bg-body-secondary my-5 rounded-3">
          <div class="container-fluid d-none d-md-flex justify-content-start my-2 mx-2">
              <a class="btn btn-secondary btn-lg text-dark flex-fill fade-in fade-delay-4 me-md-2" id="scrollTopBtn"><i class="fa fa-arrow-up"></i> ページの最上部に戻る</a>
              <a class="btn btn-outline-secondary btn-lg fade-in fade-delay-8 me-md-2" href="#" id="backBtn"><i class="fa fa-arrow-left"></i> 直前のページに戻る</a>
              <a class="btn btn-outline-secondary btn-lg fade-in fade-delay-12" href="{{ url_for('public.public_index') }}"><i class="fa fa-reply"></i> トップの一覧に戻る</a>
          </div>
          <div class="container-fluid d-md-none d-flex justify-content-start my-2 mx-2">
              <a class="btn btn-secondary btn-lg text-dark flex-fill fade-in fade-delay-4" id="scrollTopBtn"><i class="fa fa-arrow-up"></i> ページの最上部に戻る</a>
              <a class="btn btn-outline-secondary btn-lg fade-in fade-delay-8 mt-2 w-100 d-block" href="#" id="backBtn"><i class="fa fa-arrow-left"></i> 直前のページに戻る</a>
              <a class="btn btn-outline-secondary btn-lg fade-in fade-delay-12 mt-2 w-100 d-block" href="{{ url_for('public.public_index') }}"><i class="fa fa-reply"></i> トップの一覧に戻る</a>
          </div>
      </nav>
    </div>
    {% include "public/aside.j2" %}
  </div>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.9.0/highlight.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/highlightjs-line-numbers.js/2.8.0/highlightjs-line-numbers.min.js"></script>
  <script>
  document.addEventListener("DOMContentLoaded", () => {
    hljs.highlightAll();
    hljs.initLineNumbersOnLoad();
  });
  document.getElementById('scrollTopBtn').addEventListener('click', () => {
    window.scrollTo({
      top: 0,
      behavior: 'smooth'
    });
  });
  </script>
{% endblock %}
