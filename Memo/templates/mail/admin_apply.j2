{% extends "mail/base.j2" %}

{% block title %}
    <h1 style="color:#ffffff;margin:0;font-size:20px;font-weight:600;letter-spacing:.2em;">
        管理者申請通知
    </h1>
{% endblock %}

{% block content %}
    <p style="margin-top:0;"><span style="margin-right:5px;font-size:1.6rem;">■</span>新しい管理者申請が届きました。
    </p>

    <!-- 情報ボックス -->
    <table width="100%" cellpadding="0" cellspacing="0"
           style="background:#f9f9f9;border:1px solid #ccc;border-radius:6px;">
        <tr>
            <td style="padding:5px 20px 10px;box-shadow:0 0 10px #cde;">
                <p style="margin:0 0 8px 0;padding:5px 0;border-bottom: dotted 1px #abc">
                    <strong style="display:inline-block;width:120px; background-color:#dde;color:#234;font-weight:bold;padding:5px 10px;border-radius:3px;margin-right:20px;">ユーザーID</strong><span style="font-size:2rem;">{{ user.id }}</span>                </p>
                <p style="margin:0 0 8px 0;padding:5px 0;border-bottom: dotted 1px #abc"">
                    <strong style="display:inline-block;width:120px; background-color:#dde;color:#234;font-weight:bold;padding:5px 10px;border-radius:3px;margin-right:20px;">ユーザー名</strong><span style="font-size:2rem;">{{ user.username }}</span>                </p>
                <p style="margin:0;padding:5px 0;">
                    <strong style="display:inline-block;width:120px; background-color:#dde;color:#234;font-weight:bold;padding:5px 10px;border-radius:3px;margin-right:20px;">メールアドレス</strong><span style="font-size:2rem;">{{ user.email }}</span>                </p>
            </td>
        </tr>
    </table>

    <!-- ボタン -->
    <table width="100%" cellpadding="0" cellspacing="0" style="margin-top:25px;">
        <tr>
            <td align="center">
                <a href="{{ admin_url }}"
                   style="display:inline-block;
                          margin:10px;
                          padding:12px 24px;
                          background:#234;
                          color:#ffffff;
                          text-decoration:none;
                          border-radius:4px;
                          font-weight:600;
                          letter-spacing:0.5px;">
                    管理画面を開く
                </a>
            </td>
        </tr>
    </table>
{% endblock %}
