{% extends "base.j2" %}
{% block content %}
    {% from 'auth/_formhelpers.j2' import render_field, render_floating_field %}
    <div class="d-flex align-items-center py-4 m-5">
        <div class="form-signin p-5 w-50 m-auto">
            <h1 class="h3 mb-3 fw-normal fade-in fade-delay-1"><i class="fa fa-user-plus me-2"></i>新規登録</h1>
            <form action="{{ url_for('auth.register') }}" method="post" novalidate>
                {{ form.hidden_tag() }}
                {{ render_floating_field(form.username, "Email address", wrapper_class="fade-in fade-delay-4", autofocus=True) }}
                {{ render_floating_field(form.password, "Password", wrapper_class="fade-in fade-delay-8") }}
                {{ form.submit(class="btn btn-outline-secondary w-100 fade-in fade-delay-12") }}
                <p class="my-4 fade-in fade-delay-20"><i class="fa fa-sign-in me-2"></i>すでにアカウントをお持ちの場合は<a class="mt-5 mb-3 text-body-secondary" href="{{ url_for('auth.login') }}">こちら</a>からログインしてください。</p>
            </form>
        </div>
    </div>
{% endblock content %}
