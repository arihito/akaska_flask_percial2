{% extends "memo/base.j2" %}
{% block content %}
    <div class="d-flex align-items-center py-4 m-5">
        <div class="form-signin p-5 w-50 m-auto">
            <form action="{{ url_for('auth.login') }}" method="post" enctype="multipart/form-data" novalidate>
                {% from "auth/_formhelpers.j2" import render_floating_field %}
                {{ form.hidden_tag() }}
                <h1 class="h3 mb-3 fw-normal">ユーザー管理</h1>
                {{ render_floating_field(form.username, "ユーザー名") }}
                {{ render_floating_field(form.password, "パスワード") }}
                {{ render_floating_field(form.confirm_password, "確認用") }}
                {{ render_floating_field(form.thumbnail) }}
                {{ form.submit(class="btn btn-outline-secondary w-100") }}
            </form>
        </div>
    </div>
{% endblock content %}
