<!DOCTYPE html>
<html lang="ja">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Task</title>
        <link rel="stylesheet"
              href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
        <link rel="stylesheet"
              href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
        <style>
            input[type=text] {
                font-size: 1.2rem;
            }
            .fa {
                margin-right: 5px;
            }
            .list-text {
                font-size: 2rem;
                color: #999;
            }
            .arrow {
                font-size: 1rem;
            }
            .btn-compact {
                height: 2.4rem;
            }
            .pagination-secondary .page-link {
                color: var(--bs-secondary);
            }

            .pagination-secondary .page-link:hover {
                color: var(--bs-secondary);
                background-color: var(--bs-secondary-bg-subtle);
                border-color: var(--bs-secondary-border-subtle);
            }

            .pagination-secondary .page-item.active .page-link {
                color: #fff;
                background-color: var(--bs-secondary);
                border-color: var(--bs-secondary);
            }

            .pagination-secondary .page-item.disabled .page-link {
                color: var(--bs-secondary-color);
                background-color: var(--bs-secondary-bg);
                border-color: var(--bs-secondary-border-subtle);
            }
            .check-secondary {
                transform: scale(1.5);
                cursor: pointer;
            }

            /* チェック時の色を secondary に変更 */
            .check-secondary:checked {
                background-color: var(--bs-secondary);
                border-color: var(--bs-secondary);
            }

            /* フォーカス時（青枠を消す） */
            .check-secondary:focus {
                box-shadow: 0 0 0 0.2rem rgba(108, 117, 125, 0.25);
            }
            .list-group-item.checked,
            input[type=text]:focus {
            background: linear-gradient(
                90deg,
                #f8f9fa,
                #e9ecef,
                #f8f9fa
            );
                background-size: 200% 100%;
                animation: grayWave 1.5s ease-in-out infinite;
            }

            /* アニメーション定義 */
            @keyframes grayWave {
                0% {
                    background-position: 0% 50%;
                }
                100% {
                    background-position: 200% 50%;
                }
            }
        </style>
    </head>
    <body>
        <div class="card w-50 mx-auto shadow p-3 mt-5">
            <h1 class="card-title display-3 text-center text-black-50 mt-2 mb-4">タスク一覧</h1>
            <div class="row mt-4">
                <form action="{{ url_for('new_task') }}" method="post" class="col-7">
                    <label class="form-group d-flex gap-2">
                        <input type="text" name="content" autofocus class="form-control">
                        <button type="submit" class="btn btn-secondary w-50">
                            <i class="fa fa-plus"></i>タスク追加
                        </button>
                    </label>
                </form>
                <form action="{{ url_for('search_task') }}" method="post" class="col-5">
                    <label class="form-group d-flex gap-2">
                        <input type="text" name="search" class="form-control" value="{{ search }}">
                        <button type="submit" class="btn btn-secondary w-50">
                            <i class="fa fa-search"></i>検索
                        </button>
                    </label>
                </form>
            </div>
            <h2 class="card-title display-6 text-center text-black-50 mt-5 d-flex justify-content-between">
                <span><i class="fa fa-list"></i>未完了タスク</span>
                <div class="d-flex align-items-center">
                    <div class="d-flex flex-column border radius p-1 ps-2 me-2 justify-content-center rounded">
                        <a href="{{ url_for('sort', sort='asc') }}" class="text-black-50 arrow">
                            <i class="fa fa-arrow-up"></i>
                        </a>
                        <a href="{{ url_for('sort', sort='desc') }}" class="text-black-50 arrow">
                            <i class="fa fa-arrow-down"></i>
                        </a>
                    </div>
                    <form action="{{ url_for('all_complete') }}" method="post">
                        <button type="submit" class="btn btn-outline-secondary btn-lg text-muted">
                            <i class="fa fa-arrow-down"></i>全完了
                        </button>
                    </form>
                </div>
            </h2>
            <ul class="list-group my-3">
                {% for u in uncompleted_tasks %}
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <div class="d-flex align-items-center" style="width:60%">
                            <input type="checkbox"
                                   value="{{ u.id }}"
                                   data-id="{{ u.id }}"
                                   class="form-check-input me-4 check-secondary delete-check">
                            {% if editing_task_id == u.id %}
                                <form action="{{ url_for('update_task', task_id=u.id) }}"
                                      method="post"
                                      class="d-flex">
                                    <input type="text"
                                           name="update"
                                           class="form-control"
                                           value="{{ u.content }}">
                                    <button type="submit" class="btn btn-outline-secondary btn-sm w-50">
                                        <i class="fa fa-floppy-o"></i>保存
                                    </button>
                                    <button type="submit"
                                            class="btn btn-outline-secondary btn-sm w-50"
                                            formaction="{{ url_for('edit_cancel') }}">
                                        <i class="fa fa-times"></i>キャンセル
                                    </button>
                                </form>
                            {% else %}
                                <span class="list-text">{{ u.content }}</span>
                            {% endif %}
                        </div>
                        <form class="ms-a d-flex gap-2 align-items-center">
                            <span><i class="fa fa-calendar-o"></i>{{ u.created_at.strftime("%Y年%m月%d日") }}({{ ['月','火','水','木','金','土','日'][u.created_at.weekday() ] }})</span>
                            <button type="submit"
                                    formaction="{{ url_for('edit_task', task_id=u.id) }}"
                                    formmethod="post"
                                    class="btn btn-outline-secondary">
                                <i class="fa fa-pencil"></i>編集
                            </button>
                            <button type="submit"
                                    formaction="{{ url_for('complete_task', task_id=u.id) }}"
                                    formmethod="post"
                                    class="btn btn-outline-secondary">
                                <i class="fa fa-check-circle-o"></i>完了
                            </button>
                        </form>
                    </li>
                {% endfor %}
            </ul>
            <div class="d-flex justify-content-between">
                <button type="submit"
                        class="btn btn-secondary btn-compact"
                        onclick="submitChecked()">
                    <i class="fa fa-check-square-o"></i><i class="fa fa-arrow-right"></i><i class="fa fa-trash-o"></i>
                </button>
                <nav aria-label="Page navigation">
                    <ul class="pagination pagination-secondary justify-content-center">
                        <li class="page-item {% if page == 1 %}disabled{% endif %}">
                            <a class="page-link" href="?page={{ page - 1 }}" aria-label="Previous"><i class="fa fa-arrow-left"></i></a>
                        </li>
                        {% for p in range(1, total_pages + 1) %}
                            <li class="page-item {% if p == page %}active{% endif %}">
                                <a class="page-link" href="?page={{ p }}">{{ p }}</a>
                            </li>
                        {% endfor %}
                        <li class="page-item {% if page == total_pages %}disabled{% endif %}">
                            <a class="page-link" href="?page={{ page + 1 }}" aria-label="Next"><i class="fa fa-arrow-right"></i></a>
                        </li>
                    </ul>
                </nav>
            </div>
            <h2 class="card-title display-6 text-center text-black-50 mt-5 d-flex justify-content-between">
                <span><i class="fa fa-check-square-o"></i>完了済みタスク</span>
                <form action="{{ url_for('all_uncomplete') }}" method="post">
                    <button type="submit" class="btn btn-outline-secondary btn-lg text-muted">
                        <i class="fa fa-mail-reply-all"></i>全て戻す
                    </button>
                </form>
            </h2>
            <ul class="list-group my-3">
                {% for c in completed_tasks %}
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <span class="list-text">{{ c.content }}</span>
                        <div class="ms-a d-flex gap-2">
                            <form action="{{ url_for('uncomplete_task', task_id=c.id) }}" method="post">
                                <button type="submit" class="btn btn-outline-secondary">
                                    <i class="fa fa-mail-reply"></i>戻す
                                </button>
                            </form>
                            <form action="{{ url_for('remove_task', task_id=c.id) }}" method="post">
                                <button type="submit" class="btn btn-outline-secondary">
                                    <i class="fa fa-times"></i>削除
                                </button>
                            </form>
                        </div>
                    </li>
                {% endfor %}
            </ul>
            <form action="{{ url_for('clear_tasks') }}" method="post" class="d-grid">
                <button type="submit"
                        class="btn btn-secondary btn-lg text-white-50 text-muted">
                    <i class="fa fa-trash"></i>全クリア
                </button>
            </form>
        </div>
        <script>
        document.addEventListener("DOMContentLoaded", function () {
            const STORAGE_KEY = "checked_task_ids";
            function getCheckedIds() {
                return JSON.parse(localStorage.getItem(STORAGE_KEY) || "[]");
            }
            function saveCheckedIds(ids) {
                localStorage.setItem(STORAGE_KEY, JSON.stringify(ids));
            }
            const checkedIds = getCheckedIds();
            document.querySelectorAll(".delete-check").forEach(cb => {
                const id = cb.dataset.id;
                // 復元
                if (checkedIds.includes(id)) {
                    cb.checked = true;
                    cb.closest(".list-group-item")?.classList.add("checked");
                }
                // 変更時に保存
                cb.addEventListener("change", () => {
                    let ids = getCheckedIds();
                    if (cb.checked) {
                        if (!ids.includes(id)) ids.push(id);
                    } else {
                        ids = ids.filter(v => v !== id);
                    }
                    saveCheckedIds(ids);
                });
            });
        });
            document.addEventListener("DOMContentLoaded", function () {
            document.querySelectorAll('input[type="checkbox"][name="del_checks"]')
                .forEach(function (checkbox) {

                checkbox.addEventListener("change", function () {
                    const listItem = checkbox.closest(".list-group-item");

                    if (checkbox.checked) {
                    listItem.classList.add("checked");
                    } else {
                    listItem.classList.remove("checked");
                    }
                });

                });
            });
        </script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
        <script>
        function submitChecked() {
            const checked = document.querySelectorAll('.delete-check:checked');

            if (checked.length === 0) {
                alert('削除する項目を選択してください');
                return;
            }

            const form = document.createElement('form');
            form.method = 'POST';
            form.action = "{{ url_for('remove_checks') }}";

            checked.forEach(cb => {
                const input = document.createElement('input');
                input.type = 'hidden';
                input.name = 'del_checks';
                input.value = cb.value;
                form.appendChild(input);
            });

            document.body.appendChild(form);
            form.submit();
        }
        </script>
    </body>
</html>
